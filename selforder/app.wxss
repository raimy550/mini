/**app.wxss**/
.container {
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
} 

page {
  width: 100%;
  height: 100%;
  border-top: 1rpx solid #dadada;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

:host{
  color: #323232
}


.popup{
  height: 100%;
  width: 100%;
  position: fixed;
  z-index:999;
  background-color:rgba(15, 15, 26, 0.7);
}
