.scrollPage {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 100%;
  width: 100%;
}

.title {
  height: 70rpx;
  background: #f1f1f1;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 70rpx;
  text-align: center;
  padding: 0rpx 20rpx;
}

.payInfo{
  height: 410rpx;
  width: 100%;
  display: flex;
  text-align: center;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}

.adInfo{
  height: 658;
  padding: 20rpx;
  text-align: center;
}

.adInfo .share{
  display: flex;
  margin: 45rpx 78rpx;
  justify-content: space-between;  
}

.share .item{
  text-align: center;
  font-size: 28rpx;
}

.item .img{
  height: 86rpx;
  width: 86rpx;
}



