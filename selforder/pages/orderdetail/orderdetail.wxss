/* pages/orderdetail/orderdetail.wxss */
page {
  background: #F1F1F1;
}

.scrollContent {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  bottom: 98rpx;
  width: 100%;
}

.scrollContent .content, .scrollContent .contentEx{
  background: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding-left: 18rpx;
  padding-right: 18rpx;
}



.content .title {
  height: 70rpx;
  width: 100%;
  background: white;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  color: #323232;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 1rpx dashed #f1f1f1;
}

.title .left {
  position: relative;
  font-size: 34rpx;
  margin-left: 40rpx;
}

.left::before {
  content: "";
  position: absolute;
  background: #ff6f06;
  width: 6rpx;
  height: 31rpx;
  left: -20rpx;
  top: 20rpx;
}

.title .right {
  margin-right: 16rpx;
}

.right .img {
  height: 25rpx;
  width: 30rpx;
}


.category{
  font-size: 29rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.content .item{
  height: 98rpx;
  width: 100%;
  display: flex;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.item .food{
  display: flex;
  align-items: center;
}

.food .img{
  height: 98rpx;
  width: 98rpx;
}

.food .name{
  margin-left: 10rpx; 
}

.item .numb{
  font-weight: bold;
}

.item .unitPrice{
  font-weight: bold;
}

.content .otherItem{
  height: 30rpx;
  width: 100%;
  display: flex;
  font-size: 28rpx;
  text-align: center;
  justify-content: space-between;
  padding-bottom: 30rpx;
}
.contentEx{
  margin-top: 20rpx;
}

.contentEx .payWay{
  height: 88rpx;
  width: 100%;
  display: flex;
  text-align: center;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
}

.contentEx .bill{
  height: 85rpx;
  width: 100%;
  display: flex;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
}
.contentEx .billUpdate{
  height: 30rpx;
  padding-bottom: 20rpx;
  width: 100%;
  display: flex;
  font-size: 26rpx;
  align-items: center;
  color: #989898;
  justify-content: space-between;
}

.popup{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.popup .box{
  width: 600rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 40rpx;
  background: white;
}

.box .input{
  display: flex;
  width: 100%;
  height: 78rpx;
  position: relative;
  align-items: center;
  margin-top:40rpx;
  margin-bottom: 10rpx;
}

.input:after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #ff6f06;
  color: #ff6f06;
}

.input .code{
  position: absolute;
  bottom: 10rpx;
  right: 0rpx;
  font-size: 26rpx;
  color: #6bb001;
  height: 58rpx;
  width: 176rpx;
  line-height: 58rpx;
  text-align: center;
  background: #f0f0f0;
  border-radius: 10rpx;
}

.box .btn{
  margin-top: 90rpx;
  margin-bottom: 50rpx;
  height: 88rpx;
  text-align: center;
  color: #ff6f06;
  border: 2rpx solid #ff6f06;
  border-radius: 10rpx;
  line-height: 88rpx;
}

.popup .close{
  margin-top: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}





