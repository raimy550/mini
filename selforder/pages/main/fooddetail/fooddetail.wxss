/* pages/main/fooddetail/fooddetail.wxss */
@import "../../template/commlayouts.wxss";
.scrollContent {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  bottom: 98rpx;
  width: 100%;
}

.foodImgs {
  display: flex;
  width: 100%;
  height: 478rpx;
  background: #eeeff8;
  justify-content: center;
  align-items: center;
}

.foodImgs .img {
  width: 308rpx;
  height: 308rpx;
}

.foodInfo {
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  height: 226rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.foodInfo .nameOps {
  margin-top: 24rpx;
  display: flex;
  height: 38rpx;
  width: 100%;
  justify-content: space-between;
}

.nameOps .name {
  height: 38rpx;
  font-size: 30rpx;
  line-height: 100%;
  text-align: center;
  color: #323232;
  font-weight: bold;
}

.nameOps .ops {
  display: flex;
}

.nameOps .op {
  margin-left: 20rpx;
  height: 38rpx;
  width: 38rpx;
}

.foodInfo .sales {
  display: flex;
  height: 30rpx;
  font-size: 20rpx;
  color: #989898;
}

.foodInfo .priceType {
  margin-top: 20rpx;
  height: 25rpx;
  width: 83rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 25rpx;
  color: #ff6f06;
  border-radius: 5rpx;
  border: 1rpx solid #ff6f06;
}

.foodInfo .priceTrolley {
  display: flex;
  height: 58rpx;
  width: 100%;
  justify-content: space-between;
}

.priceTrolley .price {
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  display: flex;
}

.price .realPrice {
  color: #ff3637;
  font-size: 28rpx;
  font-weight: bold;
}

.price .originalPrice {
  padding-top: 3rpx;
  padding-left: 10rpx;
  color: #989898;
  font-size: 24rpx;
  text-decoration: line-through;
}

.priceTrolley .trolley {
  position: relative;
  height: 58rpx;
  width: 230rpx;
}

.trolley .background {
  height: 58rpx;
  width: 230rpx;
}

.trolley .text {
  position: absolute;
  height: 58rpx;
  width: 230rpx;
  font-size: 26rpx;
  line-height: 58rpx;
  text-align: center;
  color: white;
  top: 0rpx;
  left: 0rpx;
  padding-left: 20rpx;
}

.foodInfoEx {
  display: flex;
  flex-direction: column;
  height: 289rpx;
  border-bottom: 20rpx solid #f1f1f1;
}

.foodInfoEx .content {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.foodInfoEx .title {
  font-size: 30rpx;
  line-height: 100%;
  color: #323232;
  font-weight: bold;
  padding-bottom: 10rpx;
  margin-top: 40rpx;
}

.foodInfoEx .info {
  font-size: 26rpx;
  color: #323232;
}

.foodInfoEx .composition, .feature, .praise {
  margin-top: 20rpx;
  display: flex;
}

.evaluation {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.evaluation .title {
  display: flex;
  height: 87rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.title .left {
  font-size: 30rpx;
  width: 183rpx;
  line-height: 87rpx;
  text-align: center;
  color: #323232;
}

.title .right {
  display: flex;
  width: 100%;
  line-height: 95rpx;
  text-align: center;
  font-size: 26rpx;
  color: #323232;
  justify-content: space-between;
}

.evaluation .list {
  display: flex;
  flex-direction: column;  
}

.evaluation .item {
  height: 198rpx;
  padding-top: 36rpx;
  display: flex;
  border-bottom: 1rpx solid #e7e7e7;
}

.item .img {
  height: 72rpx;
  width: 72rpx;
  border-radius: 72rpx;
}

.item .info {
  margin-left: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.info .namedate {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.namedate .name {
  color: #323232;
}

.namedate .date {
  align-self: right;
  color: #989898;
}

.info .praise {
  margin-top: 22rpx;
  font-size: 22rpx;
  color: #989898
}

.info .content {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #323232;
  font-weight: 500;
}

.list .end{
  height: 118rpx;
  line-height: 118rpx;
  font-size: 26rpx;
  text-align: center;
  
  color: #656565
}


