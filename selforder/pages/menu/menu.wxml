<!--pages/menu/menu.wxml-->
<!-- 广告 -->
<view class='adcontent'>
  <swiper indicator-dots='true' autoplay='true' interval='5000' class='swiper'>
    <block wx:for="{{imgUrls}}" wx:key="">
      <swiper-item>
        <image src="{{item}}" class='item' mode='center'></image>
      </swiper-item>
    </block>
  </swiper>
  <view class='info'>
    <text class='position'>C26</text>
    <text class='content'>最新公告：全场消费，赵卫杰 买单!!!!!</text>
  </view>
</view>
<view class='menucontent'>
  <!-- 菜单 -->
  <scroll-view class="menuList" scroll-y="true">
    <block wx:for="{{menu}}" wx:key="">
      <view class="menu{{index==selected?'selected':''}}" data-index="{{index}}" catchtap="turnMenu">{{item.typeName}}</view>

    </block>
  </scroll-view>
  <view class='foodList'>
    <!-- 食品类型 -->
    <view class='typeName'>{{menu[selected].typeName}}</view>
    <!-- 食品列表 -->
    <scroll-view class="srcollFood" scroll-y="true" scroll-into-view="{{toView}}" scroll-with-animation="true" bindscroll="onGoodsScroll">
      <block wx:for="{{menu}}" wx:key="">
        <view id="{{menu[index].id}}" class="title">{{menu[index].typeName}}</view>
        <block wx:for="{{menu[index].menuContent}}" wx:key="">
          <view class="food">
            <image class="img" src="{{item.src}}"></image>
            <view class="food-info">
              <view class="name">{{item.name}}</view>
              <view class="sales">月售 {{item.sales}}赞 {{item.rating}}
              </view>
              <view class="price">￥ {{item.price}}</view>
            </view>
            <view class="food-numb">
              <view class="remove" bindtap="removeFromTrolley" hidden="{{item.numb==0}}" data-index="{{index}}">-</view>
              <text class="text" hidden="{{item.numb==0}}">{{item.numb}}</text>
              <view class="add" bindtap="addToTrolley" data-index="{{index}}">+</view>
            </view>
          </view>
        </block>
      </block>
    </scroll-view>

    <view class="footer {{cost!=0?'active':''}}">
      <view class="howMuch">
        <view class="img" style="background:{{cost!=0?'#FFD161':'#E7E7E7'}};">
          <image src="/pages/res/images/trolley.png" style="width:106rpx;height:106rpx;"></image>
        </view>
        <view class="cost" hidden="{{cost==0}}">￥{{cost}}</view>
      </view>
      <view class="pay">{{cost!=0?'去结算':'15元起送'}}</view>      
    </view>
  </view>
</view>