/* pages/menu/menu.wxss */

page {
  width: 100%;
  height: 100%;
}


.custom-nav{
  width: 100%;
  height: 128rpx;
  background: white;
}

.adcontent {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 260rpx;
}

.adcontent .swiper {
  width: 100%;
  height: 75%;
}

.swiper .item {
  width: 100%;
  height: 100%;
}

.adcontent .info {
  display: flex;
  align-items: center;
  width: 100%;
  height: 25%;
}

.info .position{
  color: #ff6f06;
  font-size: 30rpx;
  margin-left: 20rpx;
  text-align: center;
}

.info .content{
  color: #656565;
  margin-left: 50rpx;
  font-size: 20rpx;
  text-align: center;
}

.menucontent {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 870rpx;
  background:white;
}

.menucontent .menuList {
  display: flex;
  flex-direction: column;
  width: 125rpx;
  height: 870rpx;
  background-color: #F1F1F1;
  align-items: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menuList .menu {
  height: 110rpx;
  width: 125rpx;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #656565;
  border-bottom: 1rpx solid #dadada;
}

.menuList .menuselected{
  height: 110rpx;
  width: 125rpx;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #323232;
  font-weight: bold;
  border-bottom: 1rpx solid #dadada;
  background-color: white;
}


.menucontent .foodList {
  display: flex;
  flex-direction: column;
  height: 870rpx;
  width: 100%;
  background: white;
}

.foodList .typeName{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  height: 80rpx;
  width: 100%;
  font-size: 30rpx;
  background: white;
  color: #323232;
  font-weight:bold;
}

.foodList .srcollFood{
  display: flex;
  flex-direction: column;
  height: 670rpx;
  width: 100%;
  background: #ececec;
}

.foodList .title {
  padding: 15rpx;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 25rpx;
}

.food {
  /* position: relative; */
  display: flex;
 
  height: 170rpx;
  border-bottom: 1rpx solid #ececec;
  background: white;
}

.food .img {
  margin-left: 10rpx;
  width: 120rpx;
  height: 120rpx;
  align-self: center;
}

.food-info {
  position: relative;
  padding-top: 25rpx;
  padding-left: 15rpx;
  flex: 1;
}

.food .name {
  font-size: 30rpx;
  color: #323232
}

.food .sales {
  font-size: 20rpx;
  color: #989898;
}

.food .price {
  font-size: 30rpx;
  color: #ff3637;
  position: absolute;
  bottom: 20rpx;
}

.food-numb {
  height: 40rpx;
  width: 130rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 115rpx;
  margin-right: 30rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: #323232
}

.food-numb .add, .food-numb .remove {
  width: 40rpx;
  height: 40rpx;
  border-radius: 30rpx;
  text-align: center;
}


.footer{
  display: flex;
  position: absolute;
  right: 0;
  left: 0;
  bottom:0;
  height: 100rpx;
}

.footer .howMuch{
  position: relative;
  flex: 1;
  font-size: 28rpx;
  background: white;
  line-height: 100rpx;
  padding-left: 130rpx;
}

.howMuch .img{
  position: absolute;
  height: 106rpx;
  width: 106rpx;
  border-radius: 100rpx;
  left: 20rpx;
  top: -16rpx;
  display: flex;
}


.howMuch .cost{
  color: red;
  font-size: 50rpx;
  line-height: 100rpx;
  height: 100%;
  width: 100rpx;
}

.footer .pay{
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  background: #CCCCCC;
}


.footer.active .pay{
  background: #FFD161;
  color: black;
  
}